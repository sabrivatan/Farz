{
  "expo": {
    "name": "Farz",
    "slug": "Farz",
    "version": "1.0.3",
    "scheme": "farz",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#064e3b"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "fetch"
        ],
        "NSUserTrackingUsageDescription": "Bu tanımlayıcı, size kişiselleştirilmiş reklamlar sunmak için kullanılacaktır.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.farz.app"
    },
    "android": {
      "versionCode": 4,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#064e3b"
      },
      "package": "com.farz.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.POST_NOTIFICATIONS",
        "com.google.android.gms.permission.AD_ID"
      ],
      "blockedPermissions": [
        "android.permission.ACTIVITY_RECOGNITION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-sqlite",
      "@react-native-community/datetimepicker",
      "expo-image-picker",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#064e3b"
        }
      ],
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-2937808553151023~3453704702",
          "iosAppId": "ca-app-pub-2937808553151023~6344194567"
        }
      ],
      "expo-tracking-transparency"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "4ed89432-6111-4476-b58f-6f5113642ccb"
      }
    }
  }
}
